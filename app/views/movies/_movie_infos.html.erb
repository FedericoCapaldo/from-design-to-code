<div class="movie-infos">
  <h2><%= movie.title %> <small>(<%= movie.year %>)</small></h2>
  <i class="fas fa-pen fa-xs ml-2"></i>
</div>

<!-- Insert the movie form here -->
<%= simple_form_for movie, html: { class: 'd-none' } do |f| -%>
  <%= f.input :title %>
  <%= f.input :year %>
  <%= f.submit "Update movie", class: "btn btn-sm btn-primary mt-2" %>
<% end -%>
