<div class="container">
  <div class="row">
    <div class="col">
      <h2 class="my-3 d-flex justify-content-center">Movies to watch üçø</h2>

      <div data-controller="refresh-list">
        <%= form_with url: movies_path, method: :get, html: { class: 'mb-4', data: { refresh_list_target: 'form' } } do |f| %>
          <%= f.text_field :query,
                           class: "form-control",
                           placeholder: 'Type a movie title',
                           value: params[:query],
                           data: {
                            refresh_list_target: 'searchInput',
                            action: "keyup->refresh-list#update"
                          } %>
        <% end %>

        <%= render 'list', movies: @movies %>
      </div>
    </div>
  </div>
</div>
